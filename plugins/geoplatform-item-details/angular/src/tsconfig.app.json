{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "baseUrl": "./",
        "module": "es6",
        "target": "es6",
        "paths": {
            "@deps": ["../node_modules"],
            "@app" : ["./src/app"],
            "@geoplatform/client/angular": ["../node_modules/@geoplatform/client/dist/angular"]
        },
        "types": [ "node" ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}
